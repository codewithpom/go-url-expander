{
    "manifest_version": 2,
    "name": "Link Hover Extension",
    "version": "1.0",
    "description": "Change link hover attribute",
    "permissions": [
      "activeTab",
      "http://locahost:4567/*"
    ],
    "browser_action": {
      "default_title": "Link Hover Extension"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  